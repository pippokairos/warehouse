<h1>Products list</h1>

<% if @products.empty? %>
  <p>There are no products... Maybe <a href="<%= new_product_path %>">create a new one?</a></p>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Reference</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th scope="row"><%= link_to product.reference, product_path(product) %></th>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= number_to_currency(product.price, unit: "â‚¬") %></td>
          <td><a href="<%= edit_product_path(product) %>"><button type="button" class="btn btn-primary btn-sm">Edit</button></a></td>
          <td><%= button_to "Destroy", product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete #{product.reference}?" }, class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
